#include <stdio.h>

int main(void) {

    /*
     *Recorrendo à técnica de loop crie uma app que faça a tabuada
     *
     *exp:
     *num = x
     *
     *output;
     *
     * 1 * x = x
     * 2 * x = xx
     * 3 * x = xx
     * 4 * x = xx
     * 5 * x = xx
     * 6 * x = xx
     * 7 * x = xx
     * 8 * x = xx
     * 9 * x = xx
     *10 * x = xx
     */

    printf("Calculador da tabuada.\n ");

    int number;
    int multiplier;

    printf("Insira um numero: ");
    scanf("%d", &number);

    printf("A tabuada do numero %d e:\n", number);

    for (multiplier = 1; multiplier <= 10; multiplier++) {

        int result = number * multiplier;
        printf("%d * %d = %d\n", number, multiplier, result);
    }

    printf("Parabens aprendeu a tabuada do numero %d!", number);

    return 0;
}
