#include <stdio.h>

void imprimirpadrao(int n) {

    // Loop para ir de um a n
    for (int i = 1; i <= n; i++) {

        // Loop para mandar imprimir numeros ate ao valor de i
        for (int j = 1; j <= i; j++) {
            printf("%d  ", j);
        }
        printf("\n");
    }
}

int main(void) {
    int n; //variavel para n

    printf("Digite um numero para 'n': ");

    while (scanf("%d", &n) != 1 || n <= 0) {}
    imprimirpadrao(n);
}
