#include <stdio.h>
#define LINHA 100
/*
 *
 * modos:
 * a -> append (add)
 * w -> write (/)
 * r -> leitura (read)
 *
 */
void save();
void read();

int main(void) {

    //save();
    read();
    return 0;
}
void read() {

    char input[LINHA];

    FILE *myFile;
    myFile = fopen("test03.txt", "r");

    fgets(input, LINHA, myFile);
    printf("%s\n", input);

    fgets(input, 5, myFile);
    printf("%s\n", input);

    fgets(input, 2, myFile);
    printf("%s\n", input);

    fclose(myFile);
}
void save() {


    FILE *myfile;

    myfile = fopen("test03.txt", "a");

    fprintf(myfile, "Hello World mfs!!\n");

    fclose(myfile);

}
